pipeline {
    agent any

    options {
        // Prevents the default SCM checkout so that our custom checkout stage can run without conflict.
        skipDefaultCheckout true
    }

    environment {
        VENV_DIR = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                sh 'rm -rf szaszki-chess'
                sh 'git clone https://github.com/dawidziel/szaszki-chess.git'
                sh 'cd szaszki-chess && git checkout main'
            }
        }

        stage('Set up Python') {
            steps {
                sh 'apt-get update'
                sh 'apt-get install -y python3 python3-venv'
                sh "python3 -m venv ${VENV_DIR}"
                sh ". ${VENV_DIR}/bin/activate && python -m pip install --upgrade pip"
            }
        }

        stage('Install Dependencies') {
            steps {
                sh ". ${VENV_DIR}/bin/activate && pip install -r szaszki-chess/requirements.txt"
            }
        }

        stage('Run Unit Tests') {
            steps {
                sh ". ${VENV_DIR}/bin/activate && pytest szaszki-chess"
            }
        }
    }

    post {
        always {
            junit allowEmptyResults: true, testResults: '**/test-results.xml'
        }
    }
}