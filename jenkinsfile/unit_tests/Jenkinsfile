pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/dawidziel/szaszki-chess.git', branch: 'main'
            }
        }

        stage('Investigate Project Structure') {
            steps {
                sh """
                    docker run --rm --memory=2g \\
                      -v \${WORKSPACE}/szaszki-chess:/app \\
                      -w /app \\
                      python:3.12 \\
                      sh -c "
                        apt-get update && apt-get install -y git tree findutils &&
                        pip freeze > requirements.txt ;
                        echo '--- Full Directory Listing ---';
                        find . -type d;
                        echo '--- All Files ---';
                        find . -type f;
                        echo '--- Searching for Python files ---';
                        find . -name '*.py';
                        echo '--- Checking contents of requirements.txt ---';
                        cat requirements.txt
                      "
                """
            }
        }

    }

    post {
        always {
            junit allowEmptyResults: true, testResults: '**/test-results.xml'
        }

        failure {
            echo 'Unit tests failed. Please check the test results.'
        }
    }
}