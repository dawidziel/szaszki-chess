pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                sh 'rm -rf szaszki-chess'
                git url: 'https://github.com/dawidziel/szaszki-chess.git', branch: 'main'
            }
        }

        stage('Run Unit Tests') {
            steps {
                sh """
                    docker run --rm --memory=2g \\
                      -v \${WORKSPACE}/szaszki-chess:/app \\
                      -w /app \\
                      python:3.10-slim \\
                      sh -c "
                        apt-get update && apt-get install -y git tree &&
                        pip install --upgrade pip &&
                        cd /app &&
                        pip freeze > requirements.txt &&
                        pip install -r requirements.txt &&
                        pip install pytest pytest-cov &&
                        echo '--- Project Structure ---';
                        tree;
                        echo '--- Python Path ---';
                        python -c 'import sys; print(sys.path)';
                        echo '--- Looking for test files ---';
                        find . -name 'test_*.py';
                        echo '--- Attempting to discover tests ---';
                        python -m pytest --collect-only -v || true;
                        echo '--- Running tests with full verbosity ---';
                        python -m pytest -v \\
                        --junitxml=test-results.xml \\
                        --cov=. \\
                        || (echo 'Tests failed' && exit 1)
                      "
                """
            }
        }
    }

    post {
        always {
            junit allowEmptyResults: true, testResults: '**/test-results.xml'
        }

        failure {
            echo 'Unit tests failed. Please check the test results.'
        }
    }
}