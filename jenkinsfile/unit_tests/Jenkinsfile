pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                sh 'rm -rf szaszki-chess'
                sh 'git clone https://github.com/dawidziel/szaszki-chess.git'
                sh 'cd szaszki-chess && git checkout main'
            }
        }

        stage('Run Unit Tests') {
            steps {
                sh """
                   podman run --rm --memory=2g \\
                     -v ${WORKSPACE}/szaszki-chess:/app \\
                     -w /app \\
                     python:3.11 \\
                     sh -c "apt-get update && apt-get install -y libgl1-mesa-glx libxkbcommon0 libegl1-mesa libdbus-1-3 && pip install -r requirements.txt && export PYTHONPATH=/app && pytest --junitxml=test-results.xml"
                """
            }
        }
    }

    post {
        always {
            junit allowEmptyResults: true, testResults: '**/test-results.xml'
        }
    }
}