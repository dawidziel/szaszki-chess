pipeline {
    agent any

    environment {
        PYTHON_VERSION = '3.11.2'
        VENV_DIR = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'refs/heads/main']], userRemoteConfigs: [[url: 'https://github.com/dawidziel/szaszki-chess.git']]])
            }
        }

        stage('Set up Python') {
            steps {
                sh 'sudo apt-get update'
                sh 'sudo apt-get install -y python3 python3-venv'
                sh "python3 -m venv ${VENV_DIR}"
                sh ". ${VENV_DIR}/bin/activate && python -m pip install --upgrade pip"
            }
        }

        stage('Install Dependencies') {
            steps {
                sh ". ${VENV_DIR}/bin/activate && pip install -r requirements.txt"
            }
        }

        stage('Run Unit Tests') {
            steps {
                sh ". ${VENV_DIR}/bin/activate && pytest"
            }
        }
    }

    post {
        always {
            junit '**/test-results.xml'
        }
    }
}